# ==================== API 配置 ====================
# API 网关地址 (所有后端请求都通过 API Gateway)
VITE_API_BASE_URL=http://localhost:8080

# WebSocket 地址 (实时协作功能)
VITE_WS_BASE_URL=ws://localhost:8080

# ==================== 应用配置 ====================
# 应用名称
VITE_APP_NAME=Service Ops Platform

# 应用版本
VITE_APP_VERSION=1.0.0

# 运行环境 (development | production | staging)
VITE_ENV=development

# ==================== 功能开关 ====================
# 启用调试模式
VITE_DEBUG=true

# 启用 Mock 数据
VITE_ENABLE_MOCK=false

# 启用 API 日志
VITE_ENABLE_API_LOG=true

# ==================== 第三方服务配置 ====================
# Sentry DSN (错误监控)
VITE_SENTRY_DSN=

# Google Analytics ID (数据分析)
VITE_GA_ID=

# ==================== 其他配置 ====================
# API 请求超时时间 (毫秒)
VITE_API_TIMEOUT=10000

# 文件上传最大大小 (MB)
VITE_MAX_FILE_SIZE=10
